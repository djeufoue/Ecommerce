@model List<Product>;
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .product {
       
        margin: 20px 15px 20px 15px;
        border-radius: 8px;
        width: 30%;
        float: right;
        
        background-color: white;
        position: relative;
        height: 500px;
        padding:10px;
        overflow-y:hidden;
    }

    p img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .main-heading {
        background-color:white;
        border-radius:10px;
        padding:20px;
        margin-top:20px;
    }

    .container {
        background-color: transparent;

    }

    #cut_text {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        min-width: 0;
    }
</style>

<div class="text-center main-heading">
    <h1 class="display-4">Welcome to our online shopping site</h1>
    <h2> the most successful online shopping site in Cameroon.</h2>
</div>


@if (DateTime.Now.Year == 2042)
{
    <span>The year 2042 has finally arrived!</span>
}


<div  style="display: table;">
    @foreach (var product in Model)
    {
        <a href="/Product/Details?id=@product.Id" style="color: black; text-decoration: none;">
            <div class="product">
                <p><img src="@product.ImageURL" alt="" /></p>

                <h2>@product.Title</h2>

                <p>@product.Price FCFA</p>

                <p>@product.Description.Substring(0, Math.Min(product.Description?.Length ?? 0, 200))</p>
            </div>
        </a>
    }
</div>
