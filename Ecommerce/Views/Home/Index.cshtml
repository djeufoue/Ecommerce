@model List<Product>;
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .product {
        margin: 20px 15px 20px 15px;
        border-radius: 14px;
        width: 30%;
        float: right;
        background-color: white;
        position: relative;
        height: 500px;
        padding: 10px;
        overflow-y: hidden;
        cursor: pointer;
        box-shadow: 0px 4px 6px -1px rgb(0 148 255);
        
    }

    img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0px 4px 6px -1px rgb(0 148 255);
        background-size:cover;
       transition: all 1s;
    }

    .product:hover {
        transform: scale(1.05);
    }

   

    .main-heading {
        background-color:white;
        border-radius:10px;
        padding:20px;
        margin-top:20px;
    }

    .container {
        background-color: transparent;

    }

    #cut_text {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        min-width: 0;
    }
</style>

<div class="text-center main-heading">
    <h1 class="display-4">Welcome to our online shopping site</h1>
    <h2> the most successful online shopping site in Cameroon.</h2>
</div>


@if (DateTime.Now.Year == 2042)
{
    <span>The year 2042 has finally arrived!</span>
}


<div  style="display: table; margin: 10px 10px 10px -8px;">
    @foreach (var product in Model)
    {
        <a href="/Product/Details?id=@product.Id" style="color: black; text-decoration: none; text-align:center; ">
            <div class="product">
                <img src="@product.ImageURL" alt="" />

                <h2>@product.Title</h2>

                <p><b>@product.Price FCFA</b></p>

                <p style="text-align: justify; font-family: Montserrat," Helvetica Neue",Arial,sans-serif;">@product.Description.Substring(0, Math.Min(product.Description?.Length ?? 0, 200))</p>
            </div>
        </a>
    }
</div>
